{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableDependencyDashboard"],
  "reviewers": [],
  "pip_requirements": {
    "fileMatch": ["(^|/)([\\w-]*)requirements\\.(txt|pip)$", "(^|/)([\\w-]*)requirements-dev\\.(txt|pip)$"]
  },
  "packageRules": [
    { "packagePatterns": [".*"], "semanticCommitType": "fix" },
    { "matchUpdateTypes": ["patch", "pin", "digest"], "automerge": true },
    { "matchDatasources": ["pip"], "matchFiles": ["requirements-dev.txt"], "semanticCommitType": "chore" },
    { "matchDatasources": ["pip"], "matchUpdateTypes": ["minor", "patch", "pin", "digest"], "automerge": true },
    { "matchPackageNames": ["ansible"], "groupName": "ansible", "automerge": false }
  ]
}
