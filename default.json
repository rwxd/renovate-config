{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "configMigration": true,
    "extends": [
        "config:best-practices"
    ],
    "schedule": [
        "on monday"
    ],
    "minimumReleaseAge": "14 days",
    "reviewers": [],
    "pip_requirements": {
        "fileMatch": [
            "(^|/)([\\w-]*)requirements\\.(txt|pip)$",
            "(^|/)([\\w-]*)requirements-dev\\.(txt|pip)$"
        ]
    },
    "nix": {
        "enabled": true
    },
    "packageRules": [
        {
            "groupName": "all non-major dependencies",
            "groupSlug": "all-non-major-updates",
            "lockFileMaintenance": {
                "enabled": true
            },
            "packageRules": [
                {
                    "groupName": "all non-major dependencies",
                    "groupSlug": "all-non-major-updates",
                    "matchPackageNames": [
                        "*"
                    ],
                    "matchUpdateTypes": [
                        "minor",
                        "patch"
                    ]
                }
            ],
            "separateMajorMinor": false
        },
        {
            "groupName": "all major dependencies",
            "groupSlug": "all-major-updates",
            "lockFileMaintenance": {
                "enabled": true
            },
            "packageRules": [
                {
                    "groupName": "all major dependencies",
                    "groupSlug": "all-major-updates",
                    "semanticCommitType": "fix",
                    "matchPackageNames": [
                        "*"
                    ],
                    "matchUpdateTypes": [
                        "major"
                    ]
                }
            ],
            "separateMajorMinor": false
        }
    ]
}
